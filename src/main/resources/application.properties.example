spring.datasource.url=jdbc:sqlserver://YOUR_NAMESERVER.database.windows.net:1433;database=YOURDATABASENAME;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;
spring.datasource.username=YOUR_USER@YOUR_NAMESERVER
spring.datasource.password=YOUR_PASSWORD
spring.datasource.driverClassName=com.microsoft.sqlserver.jdbc.SQLServerDriver
spring.jpa.hibernate.dialect=org.hibernate.dialect.SQLServer2012Dialect

spring.jpa.properties.hibernate.format_sql=true

spring.datasource.initialization-mode=always
logging.level.org.hibernate.sql=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE